package com.laton95.test;
import com.laton95.test.proxy.IProxy;

import net.minecraftforge.fml.common.Mod;
import net.minecraftforge.fml.common.Mod.Instance;
import net.minecraftforge.fml.common.SidedProxy;
import net.minecraftforge.fml.common.event.FMLInitializationEvent;
import net.minecraftforge.fml.common.event.FMLPostInitializationEvent;
import net.minecraftforge.fml.common.event.FMLPreInitializationEvent;

@Mod(modid="Reference.MOD_ID", name="Reference.MOD_NAME", version="Reference.VERSION")
public class TestMod {
	@Instance("testmod")
	public static TestMod instance;
	
	@SidedProxy(clientSide = "com.laton95.test.proxy.ClientProxy", serverSide = "com.laton95.test.proxy.ServerProxy")
	public static IProxy proxy;
	
	@Mod.EventHandler
	public void preInit(FMLPreInitializationEvent event){
		System.out.println("Mod is in Pre-Initialization phase!");
	}
	
	@Mod.EventHandler
	public void init(FMLInitializationEvent event){
		System.out.println("Mod is in Initialization phase!");
	}
	
	@Mod.EventHandler
	public void postInit(FMLPostInitializationEvent event){
		System.out.println("Mod is in Post-Initialization phase!");
	}
}
