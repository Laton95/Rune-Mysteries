package com.laton95.test.block;

import java.util.Random;

import net.minecraft.block.material.Material;
import net.minecraft.block.state.IBlockState;
import net.minecraft.creativetab.CreativeTabs;
import net.minecraft.init.Items;
import net.minecraft.item.Item;

public class BlockRune_Essence extends BlockTest{

	public BlockRune_Essence(String name, CreativeTabs tab, Material material, float hardness, String toolClass, int harvestLevel) {
		super(name, tab, material, hardness, toolClass, harvestLevel);
	}

	public Item getItemDropped(IBlockState state, Random rand, int fortune)
    {
        if (fortune > 3)
        {
            fortune = 3;
        }

        return rand.nextInt(10 - fortune * 3) == 0 ? Items.FLINT : super.getItemDropped(state, rand, fortune);
    }
}
